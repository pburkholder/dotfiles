[user]
	name = Peter Burkholder
	email = peter.burkholder@gsa.gov
	signingkey = F5D45DFE4F88FCC6

[alias]
   co = checkout
   poh = push origin HEAD
   cam = commit -am
   dog = log --all --decorate --oneline --graph

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red
[diff]
    noprefix = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[commit]
	gpgSign = true
[hooks]
	gitleaks = true
[core]
	hooksPath = /Users/peterdburkholder/.git-support/hooks
