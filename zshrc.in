function noup() {
  sudo kill $(pstree -s gov.gsa.software_update | tail -3 | awk 'BEGIN {ORS=" "} {print $2}')
}


function spaces2underscore() {
  for i in *\ *; do
    new=$(echo $i | sed -e 's/ /_/g')
    mv "$i" $new
  done
}
